{
    "name": "@glue42/desktop",
    "description": "Glue42 desktop library",
    "version": "5.7.1",
    "main": "dist/desktop.umd.js",
    "module": "dist/desktop.es.js",
    "browser": "dist/desktop.browser.js",
    "types": "./glue.d.ts",
    "homepage": "https://glue42.com/",
    "keywords": [
        "glue",
        "glue42",
        "desktop",
        "interop",
        "context"
    ],
    "docName": "Glue",
    "scripts": {
        "tslint": "tslint -t codeFrame ./src/**/*.ts",
        "validate-changelog": "node ./build/validate-config.js",
        "docs": "typedoc --options typedoc.json ./src",
        "auditPackage": "npm audit --registry=https://registry.npmjs.com",
        "prepublishOnly": "npm run validate-changelog && npm run auditPackage && npm run test && npm run build",
        "test": "npm run build:tests && mocha ./tests/ --recursive --exit",
        "coverage": "nyc npm run test",
        "publish:beta": "npm publish --tag beta",
        "build": "npm run tslint && tsc -p ./tsconfig.json && rollup -c",
        "build:tests": "tsc -p ./tsconfig.test.json",
        "generate-docs-new-structure": "glue-js-documentation-builder build-reference --project g4e -q reference --modules ./node_modules/@glue42/workspaces-api/workspaces.d.ts,./node_modules/@glue42/core/glue.d.ts,./glue.d.ts --newStructure"
    },
    "author": {
        "name": "Glue42",
        "url": "http://www.glue42.com"
    },
    "license": "MIT",
    "dependencies": {
        "@glue42/core": "^5.4.10",
        "@glue42/workspaces-api": "^1.3.0",
        "callback-registry": "^2.7.1",
        "shortid": "2.2.8"
    },
    "devDependencies": {
        "@rollup/plugin-replace": "^2.3.4",
        "@types/chai": "^4.2.9",
        "@types/json-stable-stringify": "1.0.32",
        "@types/mocha": "5.2.7",
        "@types/node": "12.11.1",
        "@types/shortid": "0.0.29",
        "chai": "4.1.0",
        "husky": "3.0.5",
        "mocha": "^7.1.1",
        "nyc": "^15.0.0",
        "rollup": "^2.33.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-json": "^4.0.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.25.3",
        "tick42-gateway": "0.2.7",
        "ts-loader": "^6.2.1",
        "tslint": "5.11.0",
        "typescript": "^3.7.2"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.com"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run build"
        }
    }
}
